<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
        <link href="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css" rel="stylesheet" />
        <link rel="stylesheet" href="/style.css" />
        <title>M05 Lab - Final Project Design, Links, and Backend</title>
    </head>

    <body class="bg-dark">
    <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 fixed-top">

            <div class="container">

                <a href="#" class="navbar-brand">View Courses</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"> 
                    <span class="navbar-toggler-icon"> </span> 
                </button>

                <div class="collapse navbar-collapse" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="/index" class="nav-link">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link">Log Out</a>
                        </li>
                    </ul>
                    </ul>
                </div>
            </div>
        </nav>

    <!-- Showcase -->
        <section class="bg-secondary text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start">
            <div class="container">
                <div class="d-sm-flex align-items-center justify-content-between">
                    <div>
                        <h1>
                            <span class="text-warning">All Courses</span> 
                            <a href="/add" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Add Course</a>
                            <a href="/delete" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Delete Course</a>
                            <a href="/edit" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Edit Course</a>
                        </h1>
                        
                        <table class="table table-hover table-dark table-bordered">
                            <div>                               
                                <thead>
                                        <tr>
                                            <th scope="col">Number</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Subject Area</th>
                                            <th scope="col">Credit Num</th>
                                        </tr>
                                  </thead> 
                                  <tbody>
                                        <% if (course.length > 0) { %>
                                            <% course.forEach(course => { %>
                                                <tr>
                                                    <th scope="row"><h2 class="courseNum"><%= course.courseNum%></h2></th>
                                                    <td><h3 class="courseName"><%= course.courseName%></h3></td>
                                                    <td><h2 class="courseDesc" style="font-size: 15px"><%= course.courseDesc%></h2></td>
                                                    <td><h2 class="subjectArea" style="font-size: 15px"><%= course.subjectArea%></h2></td>
                                                    <td><h2 class="creditNum" style="font-size: 15px"><%= course.creditNum%></h2></td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <p>There are no courses to display...</p>
                                        <% } %>
                                  </tbody>
                            </div>
                        </table>
                    </div>
                </div>
            </div>
        </section>

    <!-- Footer -->
        <footer class="p-5 bg-dark text-white text-center position-relative">
            <div class="container">
                <p class="lead">2022 SDEV-255 Group 5</p>

                <a href="#" class="position-absolute bottom-0 end-0 p-5">
                    <i class="bi bi-arrow-up-circle-fill h1" style="color: #fc8c03"></i>
                </a>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
        
    </body>
</html>